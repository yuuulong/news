@import "../movie/movie-template.wxss";
.movie-list-container{
  background-color: #fff;
  display: flex;
  flex-direction: column;
}
.inner-container{
  margin: 0 auto;
}
.movie-list-head{
  padding: 30rpx 20rpx 22rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.movie-list-slogan{
  font-size: 24rpx;

}
.movie-list-more{
  float: right;
}
.movie-list-more image{
  width: 9rpx;
  height: 16rpx;
  /* vertical-align: middle; */
}
.movie-list-more text{
  /* vertical-align: middle; */
  margin-right: 10rpx;
  color: #1f4ba5;
}
.movies-container{
  display: flex;
  flex-direction: row;
}